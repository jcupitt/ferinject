<script>
(function() {
    var elem = document.createElement('input');
    elem.setAttribute('type', 'date');

    if ( elem.type === 'text' ) {
        $(document).on("page:load ready", function(){
            $('input.datepicker').datepicker({
                dateFormat: 'yy-mm-dd',
                changeMonth: true,
                changeYear: true,
                showAnim: "fade"
            }); 
        });
    }
})();
</script>
