<h1>Register Patient</h1>

<!-- tried to use partials to common up with edit, but my rails seems to not 
    link up post correctly .... just copy-paste the code -->

<%= form_for :patient, url: patients_path do |f| %>
    <% if @patient.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@patient.errors.count, "error") %> 
            prohibited this article from being saved:</h2>
            <ul>
                <% @patient.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <p>
        <%= f.label :initials %><br>
        <%= f.text_field :initials %>
    </p>

    <p>
        <%= f.label :date_of_birth, "Date of Birth" %><br>
        <%= f.date_field :date_of_birth %>
    </p>

    <p>
        <%= f.label :screening_number %><br>
        <%= f.text_field :screening_number %>
    </p>

    <p>
        <%= f.label :screening_date, "Screening Date" %><br>
        <%= f.date_field :screening_date %>
    </p>

    <p>
        <%= f.label :meets_inclusion_criteria %><br>
        <%= f.check_box :meets_inclusion_criteria %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Back', patients_path %>
