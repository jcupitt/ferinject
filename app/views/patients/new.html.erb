<h1>Register New Patient</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@patient) do |f| %>
            <%= render 'fields', f: f %>

            <%= f.submit "Register patient", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>

<div class="btn-toolbar">
    <%= link_to 'Back', patients_path, class: "btn btn-primary" %>
</div>
