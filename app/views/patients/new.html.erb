<h1>Register Patient</h1>

<!-- tried to use partials to common up with edit, but my rails seems to not 
    link up post correctly .... just copy-paste the code -->

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@patient) do |f| %>
            <% if @patient.errors.any? %>
                <div id="error_explanation">
                    <div class="alert alert-danger">
                      <%= pluralize(@patient.errors.count, "error") %> 
                      prohibited this user from being created:
                    </div>
                    <ul>
                        <% @patient.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>

            <%= f.label :initials %>
            <%= f.text_field :initials %>

            <%= f.label :date_of_birth, "Date of Birth" %>
            <%= f.date_field :date_of_birth %>

            <%= f.label :screening_number %>
            <%= f.text_field :screening_number %>

            <%= f.label :screening_date, "Screening Date" %>
            <%= f.date_field :screening_date %>

            <%= f.label :meets_inclusion_criteria %>
            <%= f.check_box :meets_inclusion_criteria %>

            <%= f.submit %>

        <% end %>
    </div>
</div>

<%= link_to 'Back', patients_path %>
