<h1>Update your profile</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
            <%= render 'fields', f: f %>

            <%= f.submit "Save changes", class: "btn btn-primary" %>
        <% end %>

        <div class="gravatar_edit">
            <%= gravatar_for @user %>
            <%= link_to "Edit Gravatar", "http://gravatar.com/emails", class: "btn btn-lg btn-primary" %>
        </div>
    </div>
</div>



