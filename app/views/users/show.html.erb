<%= gravatar_for @user %>
<%= @user.email %></br>
<%= @user.institution %></br>
<%= @user.role %></br>

<% if current_user.admin? && !current_user?(@user) %>
    <%= link_to "Edit", edit_user_path(@user) %>
    <%= link_to "Delete", @user, method: :delete,
        data: { confirm: "Are you sure?" } %>
<% end %>

